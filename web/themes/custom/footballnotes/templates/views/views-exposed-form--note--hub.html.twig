<div class='row justify-content-center my-4'>
  <div class='col-12 col-lg-8'>
    <div class='filter-group px-0 d-flex'>
      <div class='d-flex flex-column align-items-center m-3'>
        {{ 'Saison' }}
        {{ form.saison }}
      </div>
      <div class='d-flex flex-column align-items-center m-3'>
        {{ 'Championnat' }}
        {{ form.championnat }}
      </div>
      <div class='d-flex flex-column align-items-center m-3'>
